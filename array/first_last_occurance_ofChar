public class first_last_occurance {
    public static void index (int index , String a , int first , int last , char element){
        if(index==a.length()){
            System.out.println(first);
            System.out.println(last);
            return ;
        }
        if(a.charAt(index)==element){
            if(first==-1){
                first = index;
            }else{
                last= index;
            }
        }
        index(index+1,a,first,last,element);
    }
    public static void main(String[] args){
        index(0,"abaacdaefaah",-1,-1,'a');
    }
}
