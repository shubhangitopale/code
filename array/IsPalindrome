public class ispalindrome {
    public static boolean palindrome(String a , int n , int i){
        if(i==n/2){
            return true;
        }
        if(a.charAt(i)!=a.charAt(n-i-1)){
            return false;
        }
        return palindrome(a,n,i+1);
    }
    public static void main(String[] args){
        String a ="abfdfgba";
        int n = a.length();
        int i=0;
       System.out.println( palindrome(a,n,i));
    }
}
