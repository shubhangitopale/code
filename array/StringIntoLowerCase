public class lowercase {
    public static String LowerCase(String s, int idx, String s1){
        if(idx ==s.length()){
            return s1;
        }
        char ch = s.charAt(idx);
        if(ch>='A' && ch<='Z'){
            s1+=(char)(ch+'a'-'A');
        }
        return LowerCase(s,idx+1,s1);
    }
    public static void main(String[] args){
        String s ="ABCD";
        String s1 ="";
        int idx = 0;
        System.out.println(LowerCase(s,idx,s1));
    }
}
