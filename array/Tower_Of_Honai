public class TowerodHonai {
    public static void abc(int n, String src  , String helper , String dest){
        if(n==1){
            System.out.println("trasfer disk "+n+" from "+src +" to " +dest);
            return ;
        }
        abc(n-1, src , dest , helper);
        System.out.println("trasfer disk "+n+" from "+src +" to " +dest);
        abc(n-1,helper ,src , dest);
    }
    

    public static void main(String[] args){
        int n=3;
        abc(n,"S","H","D");

    }
}
