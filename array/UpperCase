public class uppercase {
    public static String UpperCase(String a,String s,int idx){
        if(idx==a.length()){
            return s;
        }
        char ch = a.charAt(idx);
        if(ch>='a' && ch<='z'){
            s+=(char)(ch+'A'-'a');
        }
        return UpperCase(a, s, idx+1);
    }
    public static void main(String[] args){
        String a ="abcde";
        String s ="";
        int idx=0;
        System.out.println(UpperCase(a,s,idx));
    }
}
