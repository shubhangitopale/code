public class desired_string {
    public static String recursive(String s , int idx , String s1 , char element , int count){
        if(idx==s.length()){
            for(int i=0 ; i<count ; i++){
                s1+=element;
            }
            return s1;
        }
        if(s.charAt(idx)==element){
            count++;
        }else{
            s1+=s.charAt(idx);
        }
        return recursive(s,idx+1,s1,element,count);
    }
    public static void main(String[] args){
        String s ="axbcxxd";
        String s1 = "";
        int idx=0;
        char element ='x';
        int count=0;

        System.out.println(recursive(s,idx,s1,element , count));
        
    }
}
